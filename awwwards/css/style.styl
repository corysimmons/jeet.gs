@import 'reset.css'
@import 'fonts'
@import 'jeet'

break = 770px
mw = 1100px

html
  @extend .meta-serif
  position: relative
  min-height: 100%
  text-align: center
  font-size: 18px
  line-height: 1.6

.main
  center(mw, 25px)
  overflow: hidden
  position: relative
  z-index: 2

.footer
  position: absolute
  z-index: 2
  bottom: 0
  width: 100%
  clear: both
  padding: 45px 0
  background: #fff
  color: #6b7278
  a
    text-decoration: none
    transition: all 200ms ease
  .people-link
    padding-bottom: 3px
    color: #6b7278
    border-bottom: 1px dashed #6b7278
    &:hover
      color: darken(#6b7278, 20%)
  .jobs-link
    color: #3aa32d
    &:hover
      color: darken(#3aa32d, 20%)
  > div
    center(mw, 25px)

.video-bg
  position: fixed
  top: -50%
  right: -5%
  left: -75%
  margin: 0 auto
  z-index: 1
  video
    min-width: 140%
    min-height: 140%
    +below(break)
      display: none

.overlay
  position: fixed
  display: block
  width: 100%
  height: 100%
  z-index: 2
  background: rgba(#ed1c37, 85%)
  +below(break)
    background: #ed1c37

.logo
  col(1/5)
  margin-top: 45px
  margin-bottom: 90px
  img
    width: 140px
    height: 40px
  +below(break)
    stack()
    width: 170px
    margin-bottom: 45px

.hero-content
  @extend .altis-extrabold
  cf()
  margin-bottom: 90px
  transition: all 100ms ease
  clear: both
  color: #fff
  a
    @extend .meta-serif
    display: inline-block
    color: #fff
    text-decoration: none
    border: 1px solid #fff
    border-radius: 6px
    padding: 10px 40px
    transition: all 200ms ease
    &:hover
      background: #fff
      color: #ed1c37

.h1
  font-size: 55px
  font-weight: normal
  line-height: 1.2
  margin-bottom: 30px
  +below(break)
    font-size: 28px
