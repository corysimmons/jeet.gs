default-color = dark-grey

hilight-color = green

vendors = webkit moz o ms official

pie-enabled = true
pie-path = '/pie.htc'

html
  font-size 16px
  overflow-x: hidden
  +below(med-snap)
    font-size 14px

body, div, header, footer, h1, h2, h3, p, ul, ol, li, code, a, span
  margin 0
  padding 0
  font-family open-sans
  color dark-grey
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-tap-highlight-color rgba(0,0,0,0)
h1
  font-size xl-font
  font-family helvetica-reg
  font-weight normal
  letter-spacing -0.04em
  +below(small-snap)
    font-size 2rem
  &.headline
    font-family helvetica-bold
h2
  font-size large-font
  font-family open-sans
  font-weight normal
  margin-top small-padding-block - 21
  letter-spacing -0.04em
  +below(small-snap)
    font-size 1.2rem
h3
  font-size med-font
  font-family open-sans
  letter-spacing -0.02em
  font-weight bold
  text-transform uppercase
p
  font-size med-font
  +below(small-snap)
    padding-left 8%
    padding-right 8%
code
  font-family code-font
  font-size med-font
  &.inline
    background dark-orange
    padding 5px
    border-radius 2px
  &.to-copy
    display inline-block
    margin-bottom -13px
    padding 9px 0 8px 10px
    border-bottom-right-radius 0
    border-top-right-radius 0
    white-space nowrap
    overflow hidden
strong
  font-weight bold

.inline-link
  color white
  border-bottom 1px dotted white
  transition color 100ms ease-out, border-bottom 100ms ease-out
  text-decoration none
  cursor pointer
  user-select none
  &:hover
    border-bottom 1px dotted white
    text-decoration none
.btn
  color white
  font-family open-sans
  font-size small-font
  text-decoration none
  text-transform uppercase
  border-radius 2px
  border 1px solid white
  background transparent
  cursor pointer
  user-select none
  padding (small-padding-block - 7) small-padding-block
  transition background 200ms drawn-out-animation
  &:hover
    text-decoration none
    background white
  &:active
    position relative
    bottom -2px
.copy-btn
  position absolute
  border-bottom-left-radius 0
  border-top-left-radius 0
  right 0
  padding 8px 20px
  &:active, &.zeroclipboard-is-active
    margin-top 2px

.contained
  column(4/6, offset: 1/6)
  max-width 1200px
  +above(huge-snap)
    display table
    margin auto
    float none
    &:last-child
      margin-right auto
  +below(xl-snap)
    column(11/12, offset: 1/24)
.half
  column(1/2 5/6, gutter: 10)
.half-no-gutter
  column(1/2 5/6)
.third
  column(1/3 5/6)
  +below(small-snap)
    column(1)
  &.tight
    column(1/3 5/6, gutter: 1)
    +below(small-snap)
      column(1)
.fourth
  span(1/4 5/6)
  +below(small-snap)
    span(1/2 5/6)

.without-border
  border none
  opacity 0.7
  transition opacity 200ms drawn-out-animation
  &:hover
    opacity 1
    background none
.italic
  font-style italic
.white
  color white
.text-center
  text-align center
.cf
  clearfix()
  clear both
.scrollReveal
  opacity 0

.grid-container
  clear both
  transition background 1s ease-out
  .half, .third, .fourth, .contained
    position relative
    &:after
      size(100%)
      pos(absolute, 0, false, false, 0)
      content ''
      display block
      opacity 0
      transition opacity 1s ease-out
      z-index -1
      background rgba(orange, 0.25)
.grid-visible .grid-container
  background-color transparent
  .white
    color dark-grey
  .half, .third, .fourth, .contained
    &:after
      opacity 1
    .cell
      background-color rgba(light-grey, 0.3)
      &.darker
        background-color rgba(grey, 0.3)
      &:after
        box-sizing border-box
        border-right 1px solid white
    .tutorial
      background-color rgba(green, 0.3)
.touch .scrollReveal
  opacity 1
